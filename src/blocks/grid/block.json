{
	"apiVersion": 2,
	"name": "themezee-magazine-blocks/grid",
	"title": "Magazine Grid",
	"category": "themezee-magazine-blocks",
	"description": "Displays your latest posts in a grid layout.",
	"keywords": [ "Posts", "Magazine Grid", "ThemeZee" ],
	"attributes": {
		"categories": {
			"type": "array"
		},
		"tags": {
			"type": "string"
		},
		"author": {
			"type": "string"
		},
		"numberOfPosts": {
			"type": "number",
			"default": 6
		},
		"offset": {
			"type": "number",
			"default": 0
		},
		"order": {
			"type": "string",
			"default": "desc"
		},
		"orderBy": {
			"type": "string",
			"default": "date"
		},
		"columns": {
			"type": "number",
			"default": 3
		},
		"imageSize": {
			"type": "string",
			"default": "full"
		},
		"metaPosition": {
			"type": "string",
			"default": "below-title"
		},
		"showDate": {
			"type": "boolean",
			"default": true
		},
		"showAuthor": {
			"type": "boolean",
			"default": true
		},
		"showCategories": {
			"type": "boolean",
			"default": false
		},
		"showComments": {
			"type": "boolean",
			"default": false
		},
		"excerptLength": {
			"type": "number",
			"default": 25
		},
		"moreText": {
			"type": "string",
			"default": "Continue Reading"
		}
	},
	"supports": {
		"html": false
	},
	"textdomain": "themezee-magazine-blocks",
	"style": "themezee-magazine-blocks",
	"editorScript": "themezee-magazine-blocks",
	"editorStyle": "themezee-magazine-blocks-editor"
}